<view class="page">
    <view class="page__hd">
        <view class="page__hd_left">
            <navigator url="../user/user">
                <image src="../../assets/images/more.png" />
            </navigator>
        </view>
        <view class="page__title">
            <text>My Profile</text>
        </view>
        <view class="page__hd_right">
            <navigator url="../editInfo/editInfo">
                <image src="../../assets/images/edit.png" />
            </navigator>
        </view>
    </view>
    <scroll-view scroll-y="true">
    <view class="page__bd">
        <swiper class="swiper-tab" indicator-dots="true" indicator-color="grey" indicator-active-color="white" duration="500">
            <block wx:for="{{imgUrls}}">
                <swiper-item>
                    <image src="{{item}}" class="slide-image" mode="scaleToFill" />
                </swiper-item>
            </block>
        </swiper>
        <view class="user-info">
            <view class="name">Jenny</view>
            <view class="center">
                <view class="age">♀20</view>
                <view class="conste">Aries</view>
            </view>
            <view class="active">0m，Just Now</view>
        </view>
        <view class="like">
            <image src="../../assets/images/heart.png"  />
            <view class="like__center">
                <view class="number">4489 People Liked You</view>
                <view class="remind">You will get more likes when swipe more!</view>
            </view>
            <view class="share">Share To Friends!</view>
        </view>
        <view class="uesr-address">
            <view class="title">My Status</view>
            <view class="address">
                <image src="../../assets/images/addr.png" />
                <text>Philadelphia</text>
            </view>
        </view>
        <view class="user-label">
            <view class="mylabel">My Tags</view>
            <image src="../../assets/images/label.png" />
            <view class="firlab">Cute</view>
            <view class="seclab">CS</view>
        </view>
        <view class="uesr-hobby">
            <view class="myhobby">My Hobbies</view>
                <view class="sports">
                    <image src="../../assets/images/sports.png" />
                    <view class="sport">Rugby</view>
                </view>
                <view class="music">
                    <image src="../../assets/images/music.png" />
                    <view class="coun">Pop</view>
                    <view class="firsin">Nirvana</view>
                    <view class="secsin">The Clash</view>
                </view>
                <view class="movies">
                    <image src="../../assets/images/tv.png" />
                    <view class="movie">Killing Eve  </view>
                </view>
        </view>
 </view>
</scroll-view>
</view>